    "test": "mocha --recursive \"test/**/*.ts\" --exit",
    "build": "tsc --build .",
    "prepublishOnly": "pnpm build",
    "clean": "rimraf dist *.{d.ts,js}{,.map} build-test tsconfig.tsbuildinfo"
  },
  "files": [
    "src/",
    "internal/",
    "*.d.ts",
    "*.d.ts.map",
    "*.js",
    "*.js.map",
    "LICENSE",
    "README.md"

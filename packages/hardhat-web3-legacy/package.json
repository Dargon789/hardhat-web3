    "eslint-plugin-prettier": "5.4.1",
    "hardhat": "workspace:^2.0.0",
    "mocha": "^11.7.0",
    "prettier": "3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.8.0",
    "typescript": "5.9.2",
    "web3": "^4.7.0"
  },
  "peerDependencies": {
    "hardhat": "^2.0.0",
    "web3": "^4.7.0"
